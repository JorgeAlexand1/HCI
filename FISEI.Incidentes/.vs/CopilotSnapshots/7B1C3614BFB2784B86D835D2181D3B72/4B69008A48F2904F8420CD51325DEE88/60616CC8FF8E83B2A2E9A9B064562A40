@page "/base-conocimiento"
@using FISEI.Incidentes.Core.Entities
@using FISEI.Incidentes.Core.Interfaces.IRepositories
@using System.Net.Http.Json
@using FISEI.Incidentes.Infrastructure.Data.Repositories
@inject IConocimientoRepository ConocimientoRepository
@inject HttpClient Http

<PageTitle>Base de Conocimiento - FISEI</PageTitle>

<h1 class="mb-4">📚 Base de Conocimiento</h1>

<div class="alert alert-info">
    <i class="bi bi-lightbulb"></i>
    <strong>Base de Conocimiento:</strong> Encuentra soluciones a problemas comunes.
</div>

<!-- Buscador -->
<div class="card mb-4">
    <div class="card-body">
        <div class="input-group input-group-lg">
            <input type="text" class="form-control" 
                   @bind="terminoBusqueda" 
                   @bind:event="oninput"
                   placeholder="Buscar soluciones..."
                   @onkeyup="@(async (e) => { if (e.Key == "Enter") await Buscar(); })" />
            <button class="btn btn-primary" @onclick="Buscar" disabled="@isBuscando">
                @if (isBuscando)
                {
                    <span class="spinner-border spinner-border-sm me-2"></span>
                }
                <i class="bi bi-search"></i> Buscar
            </button>
        </div>
    </div>
</div>

@if (mostrarResultados)
{
    @if (resultados.Any())
    {
        <h5 class="mb-3">Resultados encontrados: @resultados.Count()</h5>

        <div class="row">
            @foreach (var articulo in resultados)
            {
                <div class="col-md-6 mb-4">
                    <div class="card h-100 @(articuloSeleccionado?.IdConocimiento == articulo.IdConocimiento ? "border-primary" : "")">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <h5 class="card-title">@articulo.Titulo</h5>
                                @if (articulo.Aprobado)
                                {
                                    <span class="badge bg-success">✓ Verificado</span>
                                }
                            </div>

                            <p class="card-text text-muted">
                                @articulo.Descripcion.Substring(0, Math.Min(150, articulo.Descripcion.Length))...
                            </p>

                            <div class="mb-2">
                                <span class="badge bg-light text-dark">@articulo.Categoria.Nombre</span>
                                <small class="text-muted ms-2">
                                    <i class="bi bi-eye"></i> @articulo.Visualizaciones vistas
                                </small>
                            </div>

                            @if (articulo.Calificacion != null)
                            {
                                <div class="mb-2">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        <i class="bi @(i <= articulo.Calificacion ? "bi-star-fill text-warning" : "bi-star")"></i>
                                    }
                                </div>
                            }

                            <button class="btn btn-sm btn-primary" @onclick="() => VerDetalle(articulo)">
                                <i class="bi bi-eye"></i> Ver Solución
                            </button>
                        </div>
                        <div class="card-footer text-muted">
                            <small>Publicado el @articulo.FechaCreacion.ToString("dd/MM/yyyy")</small>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-warning">
            <i class="bi bi-search"></i>
            No se encontraron artículos con el término "@terminoBusqueda"
        </div>
    }
}
else if (isLoading)
{
    <div class="text-center">
        <div class="spinner-border" role="status">
            <span class="visually-hidden">Cargando...</span>
        </div>
    </div>
}
else
{
    <!-- Artículos Destacados -->
    <h5 class="mb-3">📌 Artículos Más Vistos</h5>
    <div class="row">
        @foreach (var articulo in articulosDestacados.Take(6))
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h6 class="card-title">@articulo.Titulo</h6>
                        <p class="card-text text-muted small">
                            @articulo.Descripcion.Substring(0, Math.Min(100, articulo.Descripcion.Length))...
                        </p>
                        <button class="btn btn-sm btn-outline-primary" @onclick="() => VerDetalle(articulo)">
                            Ver más
                        </button>
                    </div>
                </div>
            </div>
        }
    </div>
}

<!-- Modal de Detalle -->
@if (articuloSeleccionado != null)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-lg modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@articuloSeleccionado.Titulo</h5>
                    <button type="button" class="btn-close" @onclick="CerrarDetalle"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <span class="badge bg-light text-dark">@articuloSeleccionado.Categoria.Nombre</span>
                        @if (articuloSeleccionado.Aprobado)
                        {
                            <span class="badge bg-success ms-2">✓ Verificado</span>
                        }
                    </div>

                    <h6>Descripción del Problema:</h6>
                    <p>@articuloSeleccionado.Descripcion</p>

                    <hr />

                    <h6>✅ Solución:</h6>
                    <div class="alert alert-success">
                        @articuloSeleccionado.Solucion
                    </div>

                    @if (!string.IsNullOrEmpty(articuloSeleccionado.PalabrasClave))
                    {
                        <h6>🔑 Palabras Clave:</h6>
                        <p>@articuloSeleccionado.PalabrasClave</p>
                    }

                    <!-- Valoración -->
                    <hr />
                    <div class="text-center">
                        <p>¿Te fue útil esta solución?</p>
                        @for (int i = 1; i <= 5; i++)
                        {
                            int rating = i;
                            <button class="btn btn-sm @(articuloSeleccionado.Calificacion == i ? "btn-warning" : "btn-outline-warning")" 
                                    @onclick="() => ValorarArticulo(rating)">
                                <i class="bi bi-star-fill"></i> @i
                            </button>
                        }
                    </div>
                </div>
                <div class="modal-footer">
                    <small class="text-muted me-auto">
                        <i class="bi bi-eye"></i> @articuloSeleccionado.Visualizaciones visualizaciones
                    </small>
                    <button type="button" class="btn btn-secondary" @onclick="CerrarDetalle">Cerrar</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private bool isLoading = true;
    private bool isBuscando = false;
    private bool mostrarResultados = false;
    private string terminoBusqueda = "";
    private List<Conocimiento> articulosDestacados = new();
    private List<Conocimiento> resultados = new();
    private Conocimiento? articuloSeleccionado;

    protected override async Task OnInitializedAsync()
    {
        await CargarArticulosDestacados();
    }

    private async Task CargarArticulosDestacados()
    {
        isLoading = true;
        try
        {
            articulosDestacados = (await ConocimientoRepository.GetArticulosAprobadosAsync()).ToList();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task Buscar()
    {
        if (string.IsNullOrWhiteSpace(terminoBusqueda))
            return;

        isBuscando = true;
        try
        {
            var response = await Http.GetFromJsonAsync<List<Conocimiento>>($"/api/conocimiento/buscar?palabrasClave={terminoBusqueda}");
            resultados = response ?? new List<Conocimiento>();
            mostrarResultados = true;
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error: {ex.Message}");
        }
        finally
        {
            isBuscando = false;
        }
    }

    private async Task VerDetalle(Conocimiento articulo)
    {
        articuloSeleccionado = articulo;
        
        // Incrementar visualizaciones
        await Http.GetAsync($"/api/conocimiento/{articulo.IdConocimiento}");
    }

    private async Task ValorarArticulo(int calificacion)
    {
        if (articuloSeleccionado == null) return;

        try
        {
            await Http.PutAsync($"/api/conocimiento/{articuloSeleccionado.IdConocimiento}/valorar?calificacion={calificacion}", null);
            articuloSeleccionado.Calificacion = calificacion;
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error: {ex.Message}");
        }
    }

    private void CerrarDetalle()
    {
        articuloSeleccionado = null;
    }
}