@page "/incidentes"
@using FISEI.Incidentes.Core.Interfaces.IRepositories
@using FISEI.Incidentes.Core.Entities
@inject IIncidenteRepository IncidenteRepository
@inject NavigationManager Navigation

<PageTitle>Incidentes - FISEI</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>📋 Lista de Incidentes</h1>
    <a href="/crear-incidente" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Nuevo Incidente
    </a>
</div>

<!-- Filtros -->
<div class="card mb-4">
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <label class="form-label">Buscar</label>
                <input type="text" class="form-control" @bind="filtroTexto" @bind:event="oninput" 
                       placeholder="Buscar por título..." />
            </div>
            <div class="col-md-3">
                <label class="form-label">Estado</label>
                <select class="form-select" @bind="filtroEstado">
                    <option value="">Todos</option>
                    <option value="Abierto">Abierto</option>
                    <option value="En Proceso">En Proceso</option>
                    <option value="Cerrado">Cerrado</option>
                </select>
            </div>
            <div class="col-md-3">
                <label class="form-label">Nivel</label>
                <select class="form-select" @bind="filtroNivel">
                    <option value="0">Todos</option>
                    <option value="1">N1</option>
                    <option value="2">N2</option>
                    <option value="3">N3</option>
                </select>
            </div>
            <div class="col-md-2 d-flex align-items-end">
                <button class="btn btn-secondary w-100" @onclick="AplicarFiltros">
                    Filtrar
                </button>
            </div>
        </div>
    </div>
</div>

@if (isLoading)
{
    <div class="text-center">
        <div class="spinner-border" role="status">
            <span class="visually-hidden">Cargando...</span>
        </div>
    </div>
}
else if (!incidentes.Any())
{
    <div class="alert alert-info">
        No se encontraron incidentes.
    </div>
}
else
{
    <div class="card">
        <div class="card-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Título</th>
                        <th>Usuario</th>
                        <th>Categoría</th>
                        <th>Estado</th>
                        <th>Nivel</th>
                        <th>Fecha Creación</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var incidente in incidentesFiltrados)
                    {
                        <tr>
                            <td><strong>#@incidente.IdIncidente</strong></td>
                            <td>@incidente.Titulo</td>
                            <td>@incidente.Usuario.Nombre</td>
                            <td>
                                <span class="badge bg-light text-dark">
                                    @incidente.Categoria.Nombre
                                </span>
                            </td>
                            <td>
                                <span class="badge bg-@GetEstadoBadgeColor(incidente.Estado.Nombre)">
                                    @incidente.Estado.Nombre
                                </span>
                            </td>
                            <td>
                                <span class="badge bg-secondary">N@incidente.IdNivelSoporte</span>
                            </td>
                            <td>@incidente.FechaCreacion.ToString("dd/MM/yyyy")</td>
                            <td>
                                <button class="btn btn-sm btn-primary" 
                                        @onclick="() => VerDetalle(incidente.IdIncidente)">
                                    Ver
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="mt-3">
                <p>Mostrando @incidentesFiltrados.Count() de @incidentes.Count() incidentes</p>
            </div>
        </div>
    </div>
}

@code {
    private bool isLoading = true;
    private List<Incidente> incidentes = new();
    private IEnumerable<Incidente> incidentesFiltrados = new List<Incidente>();

    private string filtroTexto = "";
    private string filtroEstado = "";
    private int filtroNivel = 0;

    protected override async Task OnInitializedAsync()
    {
        await CargarIncidentes();
    }

    private async Task CargarIncidentes()
    {
        isLoading = true;
        try
        {
            incidentes = (await IncidenteRepository.GetAllAsync()).ToList();
            AplicarFiltros();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private void AplicarFiltros()
    {
        incidentesFiltrados = incidentes.AsEnumerable();

        if (!string.IsNullOrWhiteSpace(filtroTexto))
        {
            incidentesFiltrados = incidentesFiltrados
                .Where(i => i.Titulo.Contains(filtroTexto, StringComparison.OrdinalIgnoreCase));
        }

        if (!string.IsNullOrWhiteSpace(filtroEstado))
        {
            incidentesFiltrados = incidentesFiltrados
                .Where(i => i.Estado.Nombre == filtroEstado);
        }

        if (filtroNivel > 0)
        {
            incidentesFiltrados = incidentesFiltrados
                .Where(i => i.IdNivelSoporte == filtroNivel);
        }
    }

    private void VerDetalle(int idIncidente)
    {
        Navigation.NavigateTo($"/incidente/{idIncidente}");
    }

    private string GetEstadoBadgeColor(string estado)
    {
        return estado switch
        {
            "Abierto" => "warning",
            "En Proceso" => "info",
            "Cerrado" => "success",
            "Cancelado" => "danger",
            _ => "secondary"
        };
    }
}