@page "/incidente/{IdIncidente:int}"
@using FISEI.Incidentes.Core.Entities
@using FISEI.Incidentes.Core.Interfaces.IRepositories
@using FISEI.Incidentes.Core.Interfaces.IServices
@using System.Net.Http.Json
@using FISEI.Incidentes.Infrastructure.Data.Repositories
@inject IIncidenteRepository IncidenteRepository
@inject IAsignacionRepository AsignacionRepository
@inject IEscalamientoService EscalamientoService
@inject HttpClient Http
@inject NavigationManager Navigation

<PageTitle>Detalle Incidente #@IdIncidente - FISEI</PageTitle>

@if (isLoading)
{
    <div class="text-center py-5">
        <div class="spinner-border" role="status">
            <span class="visually-hidden">Cargando...</span>
        </div>
    </div>
}
else if (incidente == null)
{
    <div class="alert alert-danger">
        Incidente no encontrado.
    </div>
}
else
{
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>🎫 Incidente #@incidente.IdIncidente</h1>
        <button class="btn btn-secondary" @onclick="Volver">
            <i class="bi bi-arrow-left"></i> Volver
        </button>
    </div>

    <div class="row">
        <!-- Información Principal -->
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">📋 Información del Incidente</h5>
                </div>
                <div class="card-body">
                    <h4 class="mb-3">@incidente.Titulo</h4>
                    
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Estado:</strong>
                            <span class="badge bg-@GetEstadoBadgeColor(incidente.Estado.Nombre) ms-2">
                                @incidente.Estado.Nombre
                            </span>
                        </div>
                        <div class="col-md-6">
                            <strong>Nivel de Soporte:</strong>
                            <span class="badge bg-secondary ms-2">N@incidente.IdNivelSoporte</span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Categoría:</strong>
                            <span class="badge bg-light text-dark ms-2">@incidente.Categoria.Nombre</span>
                        </div>
                        <div class="col-md-6">
                            <strong>Servicio:</strong>
                            <span class="badge bg-light text-dark ms-2">@incidente.Servicio.Nombre</span>
                        </div>
                    </div>

                    <hr />

                    <div class="mb-3">
                        <strong>Descripción:</strong>
                        <p class="mt-2">@incidente.Descripcion</p>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <strong>Reportado por:</strong>
                            <p>@incidente.Usuario.Nombre</p>
                        </div>
                        <div class="col-md-6">
                            <strong>Fecha de Creación:</strong>
                            <p>@incidente.FechaCreacion.ToString("dd/MM/yyyy HH:mm")</p>
                        </div>
                    </div>

                    @if (incidente.FechaCierre != null)
                    {
                        <div class="alert alert-success">
                            <strong>Cerrado el:</strong> @incidente.FechaCierre?.ToString("dd/MM/yyyy HH:mm")
                        </div>
                    }
                </div>
            </div>

            <!-- Asignación Actual -->
            @if (asignacionActual != null)
            {
                <div class="card mb-4">
                    <div class="card-header bg-info text-white">
                        <h5 class="mb-0">👤 Asignado a</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="flex-grow-1">
                                <h6>@asignacionActual.Usuario.Nombre</h6>
                                <small class="text-muted">
                                    Rol: @asignacionActual.Usuario.Rol.Nombre
                                </small>
                                <br />
                                <small class="text-muted">
                                    Asignado el: @asignacionActual.FechaAsignacion.ToString("dd/MM/yyyy HH:mm")
                                </small>
                            </div>
                            <div>
                                <span class="badge bg-success">Activo</span>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-warning">
                    <i class="bi bi-exclamation-triangle"></i>
                    Este incidente no tiene técnico asignado.
                </div>
            }

            <!-- Historial (Placeholder) -->
            <div class="card">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0">📜 Historial de Cambios</h5>
                </div>
                <div class="card-body">
                    <p class="text-muted">Próximamente: Historial completo de cambios...</p>
                </div>
            </div>
        </div>

        <!-- Panel de Acciones -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-warning">
                    <h5 class="mb-0">⚙️ Acciones</h5>
                </div>
                <div class="card-body">
                    @if (incidente.FechaCierre == null)
                    {
                        <button class="btn btn-danger w-100 mb-2" @onclick="EscalarIncidente" disabled="@isEscalando">
                            @if (isEscalando)
                            {
                                <span class="spinner-border spinner-border-sm me-2"></span>
                            }
                            <i class="bi bi-arrow-up-circle"></i> Escalar Nivel
                        </button>

                        <button class="btn btn-primary w-100 mb-2">
                            <i class="bi bi-pencil"></i> Agregar Comentario
                        </button>

                        <button class="btn btn-success w-100 mb-2">
                            <i class="bi bi-check-circle"></i> Marcar como Resuelto
                        </button>

                        <hr />

                        <button class="btn btn-outline-danger w-100">
                            <i class="bi bi-x-circle"></i> Cerrar Incidente
                        </button>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            Este incidente está cerrado.
                        </div>
                    }
                </div>
            </div>

            <!-- Información Adicional -->
            <div class="card mt-3">
                <div class="card-header">
                    <h6 class="mb-0">ℹ️ Información Adicional</h6>
                </div>
                <div class="card-body">
                    <small>
                        <strong>SLA del Servicio:</strong><br />
                        @incidente.Servicio.SLA ?? "No definido"
                    </small>
                    <hr />
                    <small>
                        <strong>Responsable del Servicio:</strong><br />
                        @incidente.Servicio.Responsable ?? "No definido"
                    </small>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter]
    public int IdIncidente { get; set; }

    private Incidente? incidente;
    private Asignacion? asignacionActual;
    private bool isLoading = true;
    private bool isEscalando = false;

    protected override async Task OnInitializedAsync()
    {
        await CargarIncidente();
    }

    private async Task CargarIncidente()
    {
        isLoading = true;
        try
        {
            incidente = await IncidenteRepository.GetByIdAsync(IdIncidente);
            
            if (incidente != null)
            {
                asignacionActual = await AsignacionRepository.GetAsignacionActivaPorIncidenteAsync(IdIncidente);
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task EscalarIncidente()
    {
        if (incidente == null) return;

        isEscalando = true;
        try
        {
            var request = new { MotivoEscalamiento = "Escalamiento manual desde detalle de incidente" };
            var response = await Http.PostAsJsonAsync($"/api/escalamiento/escalar/{IdIncidente}", request);

            if (response.IsSuccessStatusCode)
            {
                await CargarIncidente();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error al escalar: {ex.Message}");
        }
        finally
        {
            isEscalando = false;
        }
    }

    private void Volver()
    {
        Navigation.NavigateTo("/incidentes");
    }

    private string GetEstadoBadgeColor(string estado)
    {
        return estado switch
        {
            "Abierto" => "warning",
            "En Proceso" => "info",
            "Cerrado" => "success",
            "Cancelado" => "danger",
            _ => "secondary"
        };
    }
}