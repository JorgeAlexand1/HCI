@page "/mis-incidentes"
@using FISEI.Incidentes.Core.Entities
@using FISEI.Incidentes.Core.Interfaces.IRepositories
@inject IIncidenteRepository IncidenteRepository
@inject NavigationManager Navigation

<PageTitle>Mis Incidentes - FISEI</PageTitle>

<h1 class="mb-4">📝 Mis Incidentes</h1>

<div class="d-flex justify-content-between align-items-center mb-4">
    <p class="text-muted mb-0">Incidentes que has reportado</p>
    <a href="/crear-incidente" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Nuevo Incidente
    </a>
</div>

@if (isLoading)
{
    <div class="text-center">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Cargando...</span>
        </div>
    </div>
}
else if (!misIncidentes.Any())
{
    <div class="alert alert-info">
        <i class="bi bi-info-circle"></i>
        No has reportado ningún incidente aún.
    </div>
}
else
{
    <!-- Resumen -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-center bg-primary text-white">
                <div class="card-body">
                    <h3>@misIncidentes.Count()</h3>
                    <p class="mb-0">Total</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center bg-warning text-dark">
                <div class="card-body">
                    <h3>@misIncidentes.Count(i => i.Estado.Nombre == "Abierto")</h3>
                    <p class="mb-0">Abiertos</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center bg-info text-white">
                <div class="card-body">
                    <h3>@misIncidentes.Count(i => i.Estado.Nombre == "En Proceso")</h3>
                    <p class="mb-0">En Proceso</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center bg-success text-white">
                <div class="card-body">
                    <h3>@misIncidentes.Count(i => i.Estado.Nombre == "Cerrado")</h3>
                    <p class="mb-0">Cerrados</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Lista de Incidentes -->
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">📋 Mis Incidentes Reportados</h5>
        </div>
        <div class="card-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Título</th>
                        <th>Categoría</th>
                        <th>Estado</th>
                        <th>Nivel</th>
                        <th>Fecha Creación</th>
                        <th>Última Actualización</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var incidente in misIncidentes.OrderByDescending(i => i.FechaCreacion))
                    {
                        <tr>
                            <td><strong>#@incidente.IdIncidente</strong></td>
                            <td>@incidente.Titulo</td>
                            <td>
                                <span class="badge bg-light text-dark">
                                    @incidente.Categoria.Nombre
                                </span>
                            </td>
                            <td>
                                <span class="badge bg-@GetEstadoBadgeColor(incidente.Estado.Nombre)">
                                    @incidente.Estado.Nombre
                                </span>
                            </td>
                            <td>
                                <span class="badge bg-secondary">N@incidente.IdNivelSoporte</span>
                            </td>
                            <td>@incidente.FechaCreacion.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>
                                @{
                                    var tiempoTranscurrido = DateTime.Now - incidente.FechaCreacion;
                                }
                                <small class="text-muted">
                                    Hace @FormatearTiempo(tiempoTranscurrido)
                                </small>
                            </td>
                            <td>
                                <button class="btn btn-sm btn-primary" 
                                        @onclick="() => VerDetalle(incidente.IdIncidente)">
                                    <i class="bi bi-eye"></i> Ver
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}

@code {
    private bool isLoading = true;
    private List<Incidente> misIncidentes = new();
    private int idUsuarioActual = 1; // TODO: Obtener del contexto de autenticación

    protected override async Task OnInitializedAsync()
    {
        await CargarMisIncidentes();
    }

    private async Task CargarMisIncidentes()
    {
        isLoading = true;
        try
        {
            misIncidentes = (await IncidenteRepository.GetIncidentesPorUsuarioAsync(idUsuarioActual)).ToList();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error al cargar incidentes: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private void VerDetalle(int idIncidente)
    {
        Navigation.NavigateTo($"/incidente/{idIncidente}");
    }

    private string GetEstadoBadgeColor(string estado)
    {
        return estado switch
        {
            "Abierto" => "warning",
            "En Proceso" => "info",
            "Cerrado" => "success",
            "Cancelado" => "danger",
            _ => "secondary"
        };
    }

    private string FormatearTiempo(TimeSpan tiempo)
    {
        if (tiempo.TotalMinutes < 60)
            return $"{(int)tiempo.TotalMinutes} min";
        else if (tiempo.TotalHours < 24)
            return $"{(int)tiempo.TotalHours} horas";
        else
            return $"{(int)tiempo.TotalDays} días";
    }
}