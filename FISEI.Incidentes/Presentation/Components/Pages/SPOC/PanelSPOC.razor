@page "/panel-spoc"
@using FISEI.Incidentes.Core.Entities
@using FISEI.Incidentes.Core.Interfaces.IRepositories
@using FISEI.Incidentes.Core.Interfaces.IServices
@inject IIncidenteRepository IncidenteRepository
@inject IUsuarioRepository UsuarioRepository
@inject IAsignacionService AsignacionService
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>Panel SPOC - FISEI</PageTitle>

<h1 class="mb-4">🎯 Panel SPOC - Asignación de Incidentes</h1>

<div class="alert alert-info">
    <i class="bi bi-info-circle"></i>
    <strong>SPOC (Single Point of Contact):</strong> Gestiona la asignación de incidentes a técnicos.
</div>

@if (isLoading)
{
    <div class="text-center">
        <div class="spinner-border" role="status">
            <span class="visually-hidden">Cargando...</span>
        </div>
    </div>
}
else
{
    <!-- Estadísticas -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-center bg-warning text-dark">
                <div class="card-body">
                    <h3>@incidentesSinAsignar.Count()</h3>
                    <p class="mb-0">Sin Asignar</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center bg-info text-white">
                <div class="card-body">
                    <h3>@tecnicos.Count()</h3>
                    <p class="mb-0">Técnicos Disponibles</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center bg-primary text-white">
                <div class="card-body">
                    <h3>@totalAsignacionesHoy</h3>
                    <p class="mb-0">Asignaciones Hoy</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center bg-success text-white">
                <div class="card-body">
                    <h3>@eficienciaAsignacion%</h3>
                    <p class="mb-0">Eficiencia</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Incidentes sin Asignar -->
    <div class="card">
        <div class="card-header bg-warning">
            <h5 class="mb-0">📋 Incidentes Sin Asignar</h5>
        </div>
        <div class="card-body">
            @if (!incidentesSinAsignar.Any())
            {
                <div class="alert alert-success">
                    ✅ No hay incidentes pendientes de asignación.
                </div>
            }
            else
            {
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Título</th>
                            <th>Categoría</th>
                            <th>Nivel</th>
                            <th>Usuario</th>
                            <th>Fecha</th>
                            <th>Asignar a</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var incidente in incidentesSinAsignar)
                        {
                            <tr>
                                <td><strong>#@incidente.IdIncidente</strong></td>
                                <td>@incidente.Titulo</td>
                                <td>
                                    <span class="badge bg-light text-dark">
                                        @incidente.Categoria.Nombre
                                    </span>
                                </td>
                                <td>
                                    <span class="badge bg-secondary">N@incidente.IdNivelSoporte</span>
                                </td>
                                <td>@incidente.Usuario.Nombre</td>
                                <td>@incidente.FechaCreacion.ToString("dd/MM HH:mm")</td>
                                <td>
                                    <select class="form-select form-select-sm" 
                                            @onchange="@((e) => SeleccionarTecnico(incidente.IdIncidente, int.Parse(e.Value?.ToString() ?? "0")))">
                                        <option value="0">-- Seleccionar --</option>
                                        @foreach (var tecnico in tecnicos) @* filtro pendiente usando roles Identity *@
                                        {
                                            <option value="@tecnico.IdUsuario">
                                                @tecnico.Nombre (@ObtenerCargaTecnico(tecnico.IdUsuario))
                                            </option>
                                        }
                                    </select>
                                </td>
                                <td>
                                    <button class="btn btn-sm btn-primary me-1" 
                                            @onclick="() => AsignarAutomaticamente(incidente.IdIncidente)"
                                            disabled="@(asignacionesEnProceso.Contains(incidente.IdIncidente))">
                                        @if (asignacionesEnProceso.Contains(incidente.IdIncidente))
                                        {
                                            <span class="spinner-border spinner-border-sm"></span>
                                        }
                                        else
                                        {
                                            <i class="bi bi-magic"></i>
                                        }
                                    </button>
                                    <button class="btn btn-sm btn-success" 
                                            @onclick="() => AsignarManualmente(incidente.IdIncidente)"
                                            disabled="@(!tecnicoSeleccionado.ContainsKey(incidente.IdIncidente) || asignacionesEnProceso.Contains(incidente.IdIncidente))">
                                        <i class="bi bi-check"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>

    <!-- Carga de Técnicos -->
    <div class="card mt-4">
        <div class="card-header bg-info text-white">
            <h5 class="mb-0">👥 Distribución de Carga de Trabajo</h5>
        </div>
        <div class="card-body">
            <div class="row">
                @foreach (var tecnico in tecnicos)
                {
                    var carga = ObtenerCargaTecnico(tecnico.IdUsuario);
                    <div class="col-md-4 mb-3">
                        <div class="card">
                            <div class="card-body">
                                <h6>@tecnico.Nombre</h6>
                                <small class="text-muted">(rol)</small>
                                <div class="progress mt-2">
                                    <div class="progress-bar @ObtenerColorCarga(carga)" 
                                         role="progressbar" 
                                         style="width: @(carga * 10)%">
                                        @carga incidentes
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}

@code {
    private bool isLoading = true;
    private List<Incidente> incidentesSinAsignar = new();
    private List<Usuario> tecnicos = new();
    private Dictionary<int, int> tecnicoSeleccionado = new();
    private HashSet<int> asignacionesEnProceso = new();
    private Dictionary<int, int> cargaTecnicos = new();
    
    private int totalAsignacionesHoy = 0;
    private int eficienciaAsignacion = 95;
    private int idUsuarioSPOC = 5; // TODO: Obtener del contexto de autenticación

    protected override async Task OnInitializedAsync()
    {
        await CargarDatos();
    }

    private async Task CargarDatos()
    {
        isLoading = true;
        try
        {
            incidentesSinAsignar = (await IncidenteRepository.GetIncidentesSinAsignarAsync()).ToList();
            
            // Cargar técnicos de todos los niveles
            tecnicos = new List<Usuario>();
            for (int nivel = 1; nivel <= 3; nivel++)
            {
                var tecnicosNivel = await UsuarioRepository.GetTecnicosPorNivelAsync(nivel);
                tecnicos.AddRange(tecnicosNivel);
            }

            // Cargar carga de trabajo de cada técnico
            foreach (var tecnico in tecnicos)
            {
                var carga = await IncidenteRepository.ContarIncidentesPorTecnicoAsync(tecnico.IdUsuario);
                cargaTecnicos[tecnico.IdUsuario] = carga;
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"[ERROR SPOC] {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private void SeleccionarTecnico(int idIncidente, int idTecnico)
    {
        if (idTecnico > 0)
        {
            tecnicoSeleccionado[idIncidente] = idTecnico;
        }
    }

    private async Task AsignarAutomaticamente(int idIncidente)
    {
        asignacionesEnProceso.Add(idIncidente);
        try
        {
            await AsignacionService.AsignarAutomaticamenteAsync(idIncidente);
            await CargarDatos();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"[ERROR SPOC] {ex.Message}");
        }
        finally
        {
            asignacionesEnProceso.Remove(idIncidente);
        }
    }

    private async Task AsignarManualmente(int idIncidente)
    {
        if (!tecnicoSeleccionado.ContainsKey(idIncidente)) return;

        asignacionesEnProceso.Add(idIncidente);
        try
        {
            var idTecnico = tecnicoSeleccionado[idIncidente];
            await AsignacionService.AsignarManualmenteAsync(idIncidente, idTecnico, idUsuarioSPOC);
            await CargarDatos();
            tecnicoSeleccionado.Remove(idIncidente);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"[ERROR SPOC] {ex.Message}");
        }
        finally
        {
            asignacionesEnProceso.Remove(idIncidente);
        }
    }

    private int ObtenerCargaTecnico(int idTecnico)
    {
        return cargaTecnicos.GetValueOrDefault(idTecnico, 0);
    }

    private string ObtenerColorCarga(int carga)
    {
        return carga switch
        {
            <= 3 => "bg-success",
            <= 6 => "bg-warning",
            _ => "bg-danger"
        };
    }
}