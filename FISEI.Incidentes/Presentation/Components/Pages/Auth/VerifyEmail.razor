@page "/verify-email"
@layout Presentation.Components.Layout.EmptyLayout
@rendermode InteractiveServer
@inject HttpClient Http
@inject NavigationManager Navigation

<PageTitle>Verificar Correo</PageTitle>

<div class="row justify-content-center mt-5">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">Verificación de Correo</h5>
            </div>
            <div class="card-body text-center">
                @if (isVerifying)
                {
                    <div class="spinner-border text-primary mb-3" role="status">
                        <span class="visually-hidden">Verificando...</span>
                    </div>
                    <p>Verificando tu correo electrónico...</p>
                }
                else if (verificationSuccess)
                {
                    <div class="text-success mb-3">
                        <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" fill="currentColor" class="bi bi-check-circle" viewBox="0 0 16 16">
                            <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                            <path d="M10.97 4.97a.235.235 0 0 0-.02.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-1.071-1.05z"/>
                        </svg>
                    </div>
                    <h4 class="text-success">¡Correo verificado exitosamente!</h4>
                    <p class="mt-3">Tu correo ha sido verificado. Ahora un administrador debe asignarte un rol antes de que puedas usar el sistema.</p>
                    <p class="text-muted small">Recibirás una notificación cuando tu rol sea asignado.</p>
                    <div class="mt-4">
                        <a href="/login" class="btn btn-primary">Ir al Login</a>
                    </div>
                }
                else if (!string.IsNullOrEmpty(errorMessage))
                {
                    <div class="text-danger mb-3">
                        <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" fill="currentColor" class="bi bi-x-circle" viewBox="0 0 16 16">
                            <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                            <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"/>
                        </svg>
                    </div>
                    <h4 class="text-danger">Error en la verificación</h4>
                    <p class="mt-3">@errorMessage</p>
                    <div class="mt-4">
                        <a href="/login" class="btn btn-outline-primary">Volver al Login</a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@code {
    private bool isVerifying = true;
    private bool verificationSuccess = false;
    private string? errorMessage;

    [SupplyParameterFromQuery(Name = "email")]
    public string? Email { get; set; }

    [SupplyParameterFromQuery(Name = "token")]
    public string? Token { get; set; }

    protected override async Task OnInitializedAsync()
    {
        if (string.IsNullOrWhiteSpace(Email) || string.IsNullOrWhiteSpace(Token))
        {
            errorMessage = "Parámetros de verificación inválidos. Por favor verifica el enlace en tu correo.";
            isVerifying = false;
            return;
        }

        try
        {
            var response = await Http.GetAsync($"api/auth/verify-email?email={Uri.EscapeDataString(Email)}&token={Uri.EscapeDataString(Token)}");
            
            if (response.IsSuccessStatusCode)
            {
                verificationSuccess = true;
            }
            else
            {
                try
                {
                    var error = await response.Content.ReadFromJsonAsync<ErrorResponse>();
                    errorMessage = error?.message ?? "Error al verificar el correo. El token puede ser inválido o haber expirado.";
                }
                catch
                {
                    errorMessage = "Error al verificar el correo. El token puede ser inválido o haber expirado.";
                }
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error de conexión: {ex.Message}";
        }
        finally
        {
            isVerifying = false;
        }
    }

    public class ErrorResponse
    {
        public string? message { get; set; }
    }
}
