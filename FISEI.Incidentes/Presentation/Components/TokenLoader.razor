@using Microsoft.AspNetCore.Components.Authorization
@inject IJSRuntime JS
@inject FISEI.Incidentes.Infrastructure.Services.TokenProvider TokenProvider
@inject AuthenticationStateProvider AuthStateProvider

@code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (!firstRender) return;
        try
        {
            var token = await TokenProvider.GetTokenAsync();
            if (!string.IsNullOrWhiteSpace(token) && 
                AuthStateProvider is FISEI.Incidentes.Infrastructure.Security.CustomAuthStateProvider customProvider)
            {
                customProvider.NotifyUserAuthentication(token);
            }
        }
        catch { }
    }
}