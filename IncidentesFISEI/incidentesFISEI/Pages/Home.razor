@page "/"

<PageTitle>IncidentesFISEI - Sistema de Gestión de Incidentes ITIL v3</PageTitle>

<!-- Main Layout -->
<div class="main-horizontal-layout">
    <!-- Hero Section Full Width -->
    <section class="hero-section-horizontal">
        <div class="hero-background">
            <div class="hero-pattern"></div>
            <div class="hero-overlay"></div>
        </div>
        
        <div class="hero-content">
            <!-- Badge -->
            <div class="hero-badge">
                <i class="fas fa-shield-alt me-2"></i>
                <span>ITIL v3 Certified System</span>
            </div>
            
            <!-- Main Title -->
            <h1 class="hero-title">
                Sistema de Gestión de 
                <span class="hero-highlight d-block">Incidentes FISEI</span>
            </h1>
            
            <!-- Description -->
            <p class="hero-description">
                Plataforma integral para la gestión eficiente de incidentes tecnológicos en la 
                Facultad de Ingeniería en Sistemas, Electrónica e Industrial, desarrollada 
                siguiendo las mejores prácticas de ITIL v3.
            </p>
            
            <!-- Action Buttons -->
            <div class="hero-actions">
                <a href="/incidentes" class="btn btn-primary btn-hero">
                    <i class="fas fa-plus me-2"></i>
                    Reportar Incidente
                </a>
                <a href="/conocimiento" class="btn btn-outline-light btn-hero">
                    <i class="fas fa-search me-2"></i>
                    Buscar Soluciones
                </a>
            </div>
            
            <!-- Quick Features -->
            <div class="hero-quick-features-full">
                <div class="quick-feature">
                    <i class="fas fa-clock"></i>
                    <span>Gestión SLA</span>
                </div>
                <div class="quick-feature">
                    <i class="fas fa-users"></i>
                    <span>Múltiples Roles</span>
                </div>
                <div class="quick-feature">
                    <i class="fas fa-chart-bar"></i>
                    <span>Reportes</span>
                </div>
                <div class="quick-feature">
                    <i class="fas fa-book"></i>
                    <span>Base Conocimiento</span>
                </div>
            </div>
        </div>
    </section>

    <!-- Content Area Below Hero -->
    <div class="content-area-horizontal">
        <!-- Features Section (Top Right) -->
        <section class="features-section-horizontal">
            <div class="section-header">
                <h2 class="section-title">Funcionalidades Principales</h2>
                <p class="section-subtitle">Gestión completa del ciclo de vida de incidentes</p>
            </div>
            
            <div class="features-grid-horizontal">
                <div class="feature-card-horizontal">
                    <div class="feature-icon-large danger">
                        <i class="fas fa-exclamation-triangle"></i>
                    </div>
                    <div class="feature-content">
                        <h4>Gestión de Incidentes</h4>
                        <p>Registro, seguimiento y resolución de incidentes con clasificación automática por prioridad.</p>
                        <ul class="feature-list">
                            <li>Clasificación automática</li>
                            <li>Escalamiento automático</li>
                            <li>Seguimiento en tiempo real</li>
                        </ul>
                    </div>
                </div>
                
                <div class="feature-card-horizontal">
                    <div class="feature-icon-large success">
                        <i class="fas fa-handshake"></i>
                    </div>
                    <div class="feature-content">
                        <h4>Acuerdos de SLA</h4>
                        <p>Monitoreo automático de tiempos de respuesta y resolución según niveles de servicio.</p>
                        <ul class="feature-list">
                            <li>Alertas automáticas</li>
                            <li>Métricas de cumplimiento</li>
                            <li>Reportes de SLA</li>
                        </ul>
                    </div>
                </div>
                
                <div class="feature-card-horizontal">
                    <div class="feature-icon-large info">
                        <i class="fas fa-lightbulb"></i>
                    </div>
                    <div class="feature-content">
                        <h4>Base de Conocimiento</h4>
                        <p>Repositorio centralizado de soluciones, procedimientos y mejores prácticas.</p>
                        <ul class="feature-list">
                            <li>Búsqueda inteligente</li>
                            <li>Artículos categorizados</li>
                            <li>Historial de soluciones</li>
                        </ul>
                    </div>
                </div>
            </div>
        </section>

        <!-- Statistics Section (Bottom Right) -->
        <section class="stats-section-horizontal">
            <div class="stats-grid-horizontal">
                <div class="stat-card-horizontal">
                    <div class="stat-icon success">
                        <i class="fas fa-check-circle"></i>
                    </div>
                    <div class="stat-content">
                        <h3 class="stat-number">98%</h3>
                        <p class="stat-label">Incidentes Resueltos</p>
                    </div>
                </div>
                <div class="stat-card-horizontal">
                    <div class="stat-icon info">
                        <i class="fas fa-clock"></i>
                    </div>
                    <div class="stat-content">
                        <h3 class="stat-number">2.5h</h3>
                        <p class="stat-label">Tiempo Promedio</p>
                    </div>
                </div>
                <div class="stat-card-horizontal">
                    <div class="stat-icon warning">
                        <i class="fas fa-exclamation-triangle"></i>
                    </div>
                    <div class="stat-content">
                        <h3 class="stat-number">15</h3>
                        <p class="stat-label">Incidentes Activos</p>
                    </div>
                </div>
                <div class="stat-card-horizontal">
                    <div class="stat-icon primary">
                        <i class="fas fa-database"></i>
                    </div>
                    <div class="stat-content">
                        <h3 class="stat-number">50+</h3>
                        <p class="stat-label">Artículos KB</p>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>
