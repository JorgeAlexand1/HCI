@page "/reset-password"
@using proyectoAgiles.Services
@using System.ComponentModel.DataAnnotations
@inject AuthService AuthService
@inject IJSRuntime JSRuntime
@inject NavigationManager Navigation

<PageTitle>Restablecer Contraseña - Sistema UTA</PageTitle>

<div class="auth-page">
    <!-- Fondo decorativo -->
    <div class="auth-background">
        <div class="bg-shape shape-1"></div>
        <div class="bg-shape shape-2"></div>
        <div class="bg-shape shape-3"></div>
        <div class="bg-shape shape-4"></div>
    </div>

    <!-- Botón de volver al login -->
    <a href="/login" class="back-to-home-btn">
        <i class="fas fa-arrow-left"></i>
        Volver al Login
    </a>

    <!-- Mensaje de éxito global -->
    @if (!string.IsNullOrEmpty(successMessage))
    {
        <div class="success-overlay">
            <div class="success-container">
                <div class="success-content">
                    <div class="success-icon">
                        <i class="fas fa-check-circle"></i>
                    </div>
                    <h2 class="success-title">¡Cambio de Contraseña Exitoso!</h2>
                    <p class="success-message">Tu contraseña ha sido actualizada correctamente.</p>
                    <div class="success-actions">
                        <a href="/login" class="btn btn-success btn-lg">
                            <i class="fas fa-sign-in-alt"></i>
                            Iniciar Sesión
                        </a>
                        <p class="next-step-text">¡Ya puedes acceder con tu nueva contraseña!</p>
                    </div>
                </div>
            </div>
        </div>
    }    <div class="auth-container">
        <div class="auth-card">
            <!-- Logo y títulos -->
            <div class="auth-logo">
                <img src="images/uta-logo.png" alt="Universidad Técnica de Ambato" class="logo-uta">
                <h1 class="auth-title">Restablecer Contraseña</h1>
                <p class="auth-subtitle">Universidad Técnica de Ambato</p>
            </div>            <!-- Formulario de Restablecimiento de Contraseña -->
            <form @onsubmit="HandleSubmit" @onsubmit:preventDefault="true" class="auth-form">
                <div class="form-group">
                    <label for="newPassword" class="form-label">
                        <i class="fas fa-lock"></i>
                        Nueva Contraseña
                    </label>
                    <input type="password" 
                           id="newPassword" 
                           class="form-control" 
                           @bind="resetPasswordModel.NewPassword" 
                           @oninput="HandleNewPasswordInput"
                           placeholder="Ingresa tu nueva contraseña"
                           required />
                    @if (!string.IsNullOrEmpty(passwordValidationMessage))
                    {
                        <div class="validation-message text-danger">
                            <i class="fas fa-exclamation-triangle"></i>
                            @passwordValidationMessage
                        </div>
                    }
                </div>

                <div class="form-group">
                    <label for="confirmPassword" class="form-label">
                        <i class="fas fa-lock"></i>
                        Confirmar Nueva Contraseña
                    </label>
                    <input type="password" 
                           id="confirmPassword" 
                           class="form-control" 
                           @bind="resetPasswordModel.ConfirmPassword" 
                           @oninput="HandleConfirmPasswordInput"
                           placeholder="Confirma tu nueva contraseña"
                           required />
                    @if (!string.IsNullOrEmpty(confirmPasswordValidationMessage))
                    {
                        <div class="validation-message text-danger">
                            <i class="fas fa-exclamation-triangle"></i>
                            @confirmPasswordValidationMessage
                        </div>
                    }
                </div>

                @if (!string.IsNullOrEmpty(errorMessage))
                {
                    <div class="alert alert-danger">
                        <i class="fas fa-exclamation-triangle"></i>
                        @errorMessage
                    </div>
                }

                <button type="submit" class="btn-register" disabled="@(isLoading || !string.IsNullOrEmpty(successMessage))">
                    @if (isLoading)
                    {
                        <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                        <span>Actualizando...</span>
                    }
                    else if (!string.IsNullOrEmpty(successMessage))
                    {
                        <i class="fas fa-check"></i>
                        <span>Contraseña Actualizada</span>
                    }
                    else
                    {
                        <i class="fas fa-key"></i>
                        <span>Actualizar Contraseña</span>
                    }
                </button>
            </form>            <!-- Enlaces adicionales -->
            <div class="auth-links">
                <p>¿Recordaste tu contraseña? <a href="/login" class="login-link">Iniciar Sesión</a></p>
            </div>
        </div>
    </div>
</div>

@code {
    private ResetPasswordModel resetPasswordModel = new();
    private bool isLoading = false;
    private string errorMessage = string.Empty;
    private string successMessage = string.Empty;
    private string passwordValidationMessage = string.Empty;
    private string confirmPasswordValidationMessage = string.Empty;

    [Parameter, SupplyParameterFromQuery]
    public string? Token { get; set; }

    [Parameter, SupplyParameterFromQuery]
    public string? Email { get; set; }

    protected override void OnInitialized()
    {
        // Verificar que tenemos los parámetros requeridos
        if (string.IsNullOrEmpty(Token) || string.IsNullOrEmpty(Email))
        {
            errorMessage = "El enlace de recuperación no es válido. Solicita uno nuevo.";
            return;
        }

        resetPasswordModel.Token = Token;
        resetPasswordModel.Email = Email;
    }

    private void HandleNewPasswordInput(ChangeEventArgs e)
    {
        var password = e.Value?.ToString() ?? string.Empty;
        resetPasswordModel.NewPassword = password;
        ValidateNewPassword(password);
        
        // Re-validar confirmación si ya tiene valor
        if (!string.IsNullOrEmpty(resetPasswordModel.ConfirmPassword))
        {
            ValidatePasswordMatch();
        }
    }

    private void HandleConfirmPasswordInput(ChangeEventArgs e)
    {
        var confirmPassword = e.Value?.ToString() ?? string.Empty;
        resetPasswordModel.ConfirmPassword = confirmPassword;
        ValidatePasswordMatch();
    }

    private void ValidateNewPassword(string password)
    {
        if (string.IsNullOrEmpty(password))
        {
            passwordValidationMessage = "La nueva contraseña es requerida";
        }
        else if (password.Length < 6)
        {
            passwordValidationMessage = "La contraseña debe tener al menos 6 caracteres";
        }
        else
        {
            passwordValidationMessage = string.Empty;
        }
    }

    private void ValidatePasswordMatch()
    {
        if (string.IsNullOrEmpty(resetPasswordModel.ConfirmPassword))
        {
            confirmPasswordValidationMessage = "Confirma tu nueva contraseña";
        }
        else if (resetPasswordModel.NewPassword != resetPasswordModel.ConfirmPassword)
        {
            confirmPasswordValidationMessage = "Las contraseñas no coinciden";
        }
        else
        {
            confirmPasswordValidationMessage = string.Empty;
        }
    }

    private async Task HandleSubmit()
    {
        ClearMessages();
        
        // Validar todos los campos
        ValidateNewPassword(resetPasswordModel.NewPassword);
        ValidatePasswordMatch();

        // Verificar si hay errores de validación
        if (!string.IsNullOrEmpty(passwordValidationMessage) || !string.IsNullOrEmpty(confirmPasswordValidationMessage))
        {
            return;
        }

        if (string.IsNullOrEmpty(resetPasswordModel.Token) || string.IsNullOrEmpty(resetPasswordModel.Email))
        {
            errorMessage = "Token de recuperación o email no válido";
            return;
        }

        isLoading = true;
        
        try
        {
            var response = await AuthService.ResetPasswordAsync(resetPasswordModel);
            
            if (response.Success)
            {
                successMessage = "¡Contraseña actualizada exitosamente! Tu cuenta ha sido desbloqueada.";
            }
            else
            {
                errorMessage = response.Message;
            }
        }
        catch (Exception ex)
        {
            errorMessage = "Error de conexión. Verifica tu conexión a internet e intenta nuevamente.";
            Console.WriteLine($"Error en reset password: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private void ClearMessages()
    {
        errorMessage = string.Empty;
        successMessage = string.Empty;
    }
}
