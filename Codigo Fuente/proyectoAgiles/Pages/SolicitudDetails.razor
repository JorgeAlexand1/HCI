@code {
    [Parameter] public int SolicitudId { get; set; }

    private ProyectoAgiles.Application.DTOs.SolicitudEscalafonDto? solicitud;
    private ProyectoAgiles.Application.DTOs.HistorialEscalafonDto? historialEscalafon;
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadSolicitudDetails();
    }

    private async Task LoadSolicitudDetails()
    {
        isLoading = true;

        try
        {
            // Cargar información de la solicitud
            var solicitudResponse = await HttpClient.GetAsync($"/api/Reports/solicitud/{SolicitudId}");
            if (solicitudResponse.IsSuccessStatusCode)
            {
                var apiResponse = await solicitudResponse.Content.ReadFromJsonAsync<ProyectoAgiles.Application.DTOs.ApiResponse<ProyectoAgiles.Application.DTOs.SolicitudEscalafonDto>>();
                solicitud = apiResponse?.Data;
            }

            // Cargar historial y documentos
            var historialResponse = await HttpClient.GetAsync($"/api/Reports/historial/{SolicitudId}");
            if (historialResponse.IsSuccessStatusCode)
            {
                var historialApiResponse = await historialResponse.Content.ReadFromJsonAsync<ProyectoAgiles.Application.DTOs.ApiResponse<ProyectoAgiles.Application.DTOs.HistorialEscalafonDto>>();
                historialEscalafon = historialApiResponse?.Data;
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading solicitud details: {ex.Message}");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private string GetStatusIcon(string status)
