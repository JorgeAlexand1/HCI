@page "/forgot-password"
@using Microsoft.AspNetCore.Components.Web
@using proyectoAgiles.Services
@layout proyectoAgiles.Layout.AuthLayout
@inject AuthService AuthService
@inject NavigationManager NavigationManager

<PageTitle>Recuperar Contraseña - UTA</PageTitle>

<div class="auth-page">
    <!-- Fondo decorativo -->
    <div class="auth-background">
        <div class="bg-shape shape-1"></div>
        <div class="bg-shape shape-2"></div>
        <div class="bg-shape shape-3"></div>
        <div class="bg-shape shape-4"></div>
    </div>

    <!-- Botón de volver al login -->
    <a href="/login" class="back-to-home-btn">
        <i class="fas fa-arrow-left"></i>
        Volver al Login
    </a>
    
    <div class="auth-container">
        <div class="auth-card">
            <!-- Logo UTA -->
            <div class="auth-logo">
                <img src="images/uta-logo.png" alt="Universidad Técnica de Ambato" class="logo-uta">
                <h2 class="auth-title">Recuperar Contraseña</h2>
                <p class="auth-subtitle">Universidad Técnica de Ambato</p>
            </div>

            @if (!emailSent)
            {
                @if (!string.IsNullOrEmpty(errorMessage))
                {
                    <div class="alert alert-danger">
                        <i class="fas fa-exclamation-circle"></i>
                        @errorMessage
                    </div>
                }                <!-- Formulario de recuperación -->
                <EditForm Model="forgotPasswordRequest" OnValidSubmit="HandleForgotPassword" class="auth-form">
                    <div class="form-group">
                        <label for="email" class="form-label">
                            <i class="fas fa-envelope"></i>
                            Correo Electrónico
                        </label>
                        <InputText id="email" class="form-control" placeholder="Ingresa tu correo registrado" 
                                   @bind-Value="forgotPasswordRequest.Email" @oninput="HandleEmailInput" />                        @if (!string.IsNullOrEmpty(emailValidationMessage))
                        {
                            <div class="validation-message @(!emailExists || emailHasFormatError ? "text-danger" : "text-success")">
                                <i class="fas @(!emailExists || emailHasFormatError ? "fa-exclamation-triangle" : "fa-check-circle")"></i>
                                @emailValidationMessage
                            </div>
                        }
                        <small class="form-text">Te enviaremos un enlace para restablecer tu contraseña</small>
                    </div>                    <button type="submit" class="btn btn-primary btn-recover" disabled="@(isLoading || emailHasFormatError || string.IsNullOrEmpty(forgotPasswordRequest.Email))">
                        @if (isLoading)
                        {
                            <span class="spinner-border spinner-border-sm mr-2" role="status" aria-hidden="true"></span>
                            <span>Enviando...</span>
                        }
                        else
                        {
                            <i class="fas fa-paper-plane"></i>
                            <span>Enviar Enlace de Recuperación</span>
                        }
                    </button>
                </EditForm>                <!-- Enlaces adicionales -->
                <div class="auth-links">
                    <p>¿Recordaste tu contraseña? <a href="/login" class="login-link">Iniciar Sesión</a></p>
                </div>
            }            else
            {
                <!-- Mensaje de confirmación -->
                <div class="success-overlay">
                    <div class="success-container">
                        <div class="success-content">
                            <div class="success-icon">
                                <i class="fas fa-check-circle"></i>
                            </div>
                            <h2 class="success-title">¡Solicitud Enviada!</h2>
                            <p class="success-message">
                                Te hemos enviado un enlace para restablecer tu contraseña.
                                Por favor revisa tu correo electrónico y sigue las instrucciones.
                            </p>
                            <p class="success-message">
                                <span class="text-muted">Si no lo encuentras, revisa la carpeta de spam.</span>
                            </p>
                            <div class="success-actions">
                                <a href="/login" class="btn btn-success btn-lg">
                                    <i class="fas fa-sign-in-alt"></i>
                                    Volver al Login
                                </a>
                                <button type="button" class="btn btn-secondary btn-lg" @onclick="ResetForm">
                                    <i class="fas fa-redo"></i>
                                    Enviar Otro Enlace
                                </button>
                                <p class="next-step-text">Revisa tu bandeja de entrada y spam.</p>
                            </div>
                        </div>
                    </div>
                </div>
            }        </div>
    </div>
</div>

@code {    private ForgotPasswordRequest forgotPasswordRequest = new();
    private bool isLoading = false;
    private bool emailSent = false;
    private string errorMessage = string.Empty;
    private string emailValidationMessage = string.Empty;
    private bool emailExists = false;
    private bool emailHasFormatError = false;
    private System.Threading.Timer? emailValidationTimer;    private void HandleEmailInput(ChangeEventArgs e)
    {
        var email = e.Value?.ToString() ?? string.Empty;
        forgotPasswordRequest.Email = email;
        
        // Cancelar timer anterior si existe
        emailValidationTimer?.Dispose();
        
        // Validación inmediata de formato
        if (string.IsNullOrEmpty(email))
        {
            emailValidationMessage = string.Empty;
            emailExists = false;
            emailHasFormatError = false;
        }
        else if (!IsValidEmailFormat(email))
        {
            emailValidationMessage = "El formato del email no es válido";
            emailExists = false;
            emailHasFormatError = true;
        }
        else
        {
            emailHasFormatError = false;
            // Crear un timer para validar después de 500ms sin cambios
            emailValidationTimer = new System.Threading.Timer(async _ =>
            {
                await InvokeAsync(async () =>
                {
                    await ValidateEmailExistence(email);
                    StateHasChanged();
                });
            }, null, 500, System.Threading.Timeout.Infinite);
        }
    }    private void ValidateEmail(string email)
    {
        if (string.IsNullOrEmpty(email))
        {
            emailValidationMessage = "El email es requerido";
            emailHasFormatError = false;
        }
        else if (!IsValidEmailFormat(email))
        {
            emailValidationMessage = "El formato del email no es válido";
            emailHasFormatError = true;
        }
        else
        {
            emailValidationMessage = string.Empty;
            emailHasFormatError = false;
        }
    }

    private async Task ValidateEmailExistence(string email)
    {
        if (string.IsNullOrEmpty(email) || !IsValidEmailFormat(email))
        {
            return;
        }
        
        try
        {
            var exists = await AuthService.CheckEmailExists(email);
            emailExists = exists;
            
            if (!exists)
            {
                emailValidationMessage = "El correo electrónico no está registrado en nuestro sistema";
            }
            else
            {
                emailValidationMessage = "Email encontrado, listo para enviar enlace";
            }
        }
        catch (Exception)
        {
            emailValidationMessage = "Error al verificar el email";
            emailExists = false;
        }
    }

    private bool IsValidEmailFormat(string email)
    {
        if (string.IsNullOrEmpty(email)) return false;
        
        try
        {
            var emailAttribute = new System.ComponentModel.DataAnnotations.EmailAddressAttribute();
            return emailAttribute.IsValid(email);
        }
        catch
        {
            return false;
        }
    }    private async Task HandleForgotPassword()
    {
        try
        {
            Console.WriteLine($"[DEBUG] Iniciando proceso de recuperación para email: {forgotPasswordRequest.Email}");
            
            // Validar formato del email antes de enviar
            ValidateEmail(forgotPasswordRequest.Email);
            Console.WriteLine($"[DEBUG] Validación de formato - emailHasFormatError: {emailHasFormatError}");
            
            // Si hay errores de formato, no proceder
            if (emailHasFormatError || string.IsNullOrEmpty(forgotPasswordRequest.Email))
            {
                Console.WriteLine("[DEBUG] Error de formato detectado, cancelando proceso");
                errorMessage = "Por favor ingresa un email válido";
                return;
            }

            // Si el formato es válido, verificar que exista en el sistema
            if (IsValidEmailFormat(forgotPasswordRequest.Email))
            {
                Console.WriteLine("[DEBUG] Validando existencia del email...");
                await ValidateEmailExistence(forgotPasswordRequest.Email);
                Console.WriteLine($"[DEBUG] Email existe: {emailExists}");
            }
              
            // No proceder si el email no existe o hay errores de formato
            if (!emailExists || emailHasFormatError)
            {
                Console.WriteLine($"[DEBUG] No se puede proceder - emailExists: {emailExists}, emailHasFormatError: {emailHasFormatError}");
                if (!emailExists)
                {
                    errorMessage = "El correo electrónico no está registrado en nuestro sistema";
                }
                return;
            }

            Console.WriteLine("[DEBUG] Iniciando llamada al servicio...");
            isLoading = true;
            errorMessage = string.Empty;

            var response = await AuthService.ForgotPasswordAsync(forgotPasswordRequest.Email);
            Console.WriteLine($"[DEBUG] Respuesta del servicio - Success: {response.Success}, Message: {response.Message}");
            
            if (response.Success)
            {
                emailSent = true;
                Console.WriteLine("[DEBUG] Email enviado exitosamente");
            }
            else
            {
                errorMessage = response.Message ?? "Error al procesar la solicitud.";
                Console.WriteLine($"[DEBUG] Error en el servicio: {errorMessage}");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"[DEBUG] Excepción capturada: {ex.Message}");
            errorMessage = ex.Message;
        }
        finally
        {
            isLoading = false;
            Console.WriteLine("[DEBUG] Proceso finalizado");
        }
    }private void ResetForm()
    {
        emailSent = false;
        forgotPasswordRequest = new();
        errorMessage = string.Empty;
        emailValidationMessage = string.Empty;
        emailExists = false;
        emailHasFormatError = false;
        emailValidationTimer?.Dispose();
    }

    public class ForgotPasswordRequest
    {
        public string Email { get; set; } = string.Empty;
    }
}
