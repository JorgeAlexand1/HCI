@using Microsoft.AspNetCore.Components.Routing
@using proyectoAgiles.Services
@inject NavigationManager Navigation
@inject UserSessionService UserSession

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid d-flex justify-content-between align-items-center">
        <a class="navbar-brand" href="">
            <span class="brand-text">UTA</span>
            <span class="brand-subtitle">Proyecto Ágiles</span>
        </a>
          @if (!IsOnAuthPage())
        {
            @if (UserSession.IsAuthenticated)
            {
                <div class="auth-user-info d-none d-md-flex align-items-center">
                    <span class="user-greeting me-3">Hola, @UserSession.CurrentUser!.FirstName</span>
                    <button @onclick="Logout" class="btn btn-outline-light btn-sm">
                        <i class="fas fa-sign-out-alt me-1"></i>
                        Cerrar Sesión
                    </button>
                </div>
            }            else
            {
                <div class="auth-buttons d-none d-md-flex">
                    <a href="/login" class="btn btn-outline-light btn-sm">Iniciar Sesión</a>
                </div>
            }
        }
        
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="nav flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>
          @if (!IsOnAuthPage())
        {
            @if (UserSession.IsAuthenticated)
            {
                <div class="nav-item px-3 d-md-none">
                    <div class="mobile-user-info">
                        <div class="user-greeting mb-2">Hola, @UserSession.CurrentUser!.FirstName</div>
                        <button @onclick="Logout" class="btn btn-outline-primary btn-sm w-100">
                            <i class="fas fa-sign-out-alt me-1"></i>
                            Cerrar Sesión
                        </button>
                    </div>
                </div>
            }            else
            {
                <div class="nav-item px-3 d-md-none">
                    <div class="mobile-auth-buttons">
                        <a href="/login" class="btn btn-outline-primary btn-sm w-100">Iniciar Sesión</a>
                    </div>
                </div>
            }
        }
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    protected override async Task OnInitializedAsync()
    {
        await UserSession.InitializeAsync();
    }

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }    private bool IsOnAuthPage()
    {
        var currentPath = Navigation.ToBaseRelativePath(Navigation.Uri).ToLower();
        return currentPath == "login";
    }private async Task Logout()
    {
        await UserSession.ClearSessionAsync();
        Navigation.NavigateTo("/");
    }
}
